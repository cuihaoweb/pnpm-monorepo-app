{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "jsx": "preserve",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*",
                "src/*.vue",
                "src/*/index.vue"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}